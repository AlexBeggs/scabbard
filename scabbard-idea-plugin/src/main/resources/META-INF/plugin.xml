<idea-plugin>
    <name>Scabbard - Dagger 2 Visualizer</name>
    <category>Custom Languages</category>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <description><![CDATA[
    Intellij plugin that integrates with Scabbard(https://github.com/arunkumar9t2/scabbard) and adds
    gutter icons to quickly open generated graph images for Dagger components.
    <br>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider
            implementationClass="dev.arunkumar.scabbard.intellij.dagger.KotlinComponentToDaggerGraphLineMarker"
            language="kotlin"/>
        <codeInsight.lineMarkerProvider
            implementationClass="dev.arunkumar.scabbard.intellij.dagger.KotlinContributesAndroidInjectorLineMarker"
            language="kotlin"/>
        <codeInsight.lineMarkerProvider
            implementationClass="dev.arunkumar.scabbard.intellij.dagger.JavaComponentToDaggerGraphLineMarker"
            language="JAVA"/>
        <codeInsight.lineMarkerProvider
            implementationClass="dev.arunkumar.scabbard.intellij.dagger.JavaContributesAndroidInjectorLineMarker"
            language="JAVA"/>
    </extensions>

    <id>dev.arunkumar.scabbard.idea-plugin</id>

    <idea-version since-build="191"/>
    <vendor email="hi@arunkumar.dev" url="http://arunkumar.dev">Arunkumar</vendor>
</idea-plugin>